@model WebOdev.Models.Kitap

@{
    ViewBag.Title = "Kitap Ekle";
    Layout = "~/Views/Home/_Layout.cshtml";
}

<div class="display-6 mx-lg-5">Kitap Ekle</div>

@if (ViewBag.Message != null)
{
    <div class="alert alert-info mx-lg-5">
        @ViewBag.Message
    </div>
}

<form method="post">
    <div class="form-group my-2 mx-lg-5">
        <label class="col-form-label">Kitap Adı</label>
        @Html.TextBoxFor(k => k.KitapAdi, new { @class = "form-control", placeholder = "Kitap Adı", required = "required" })
    </div>

    <div class="form-group my-2 mx-lg-5">
        <label class="col-form-label">Yazar</label>
        @Html.TextBoxFor(k => k.Yazar, new { @class = "form-control", placeholder = "Yazar", required = "required" })
    </div>

    <div class="form-group my-2 mx-lg-5">
        <label class="col-form-label">Baskı</label>
        @Html.TextBoxFor(k => k.Baski, new { @class = "form-control", placeholder = "Baskı", required = "required" })
    </div>

    <div class="form-group my-2 mx-lg-5">
        <label class="col-form-label">Fiyat</label>
        @Html.TextBoxFor(k => k.Fiyat, new { @class = "form-control", placeholder = "Fiyat", required = "required" })
    </div>

    <div class="form-group my-2 mx-lg-5">
        <label class="col-form-label">Stok Adedi</label>
        @Html.TextBoxFor(k => k.Stok, new { @class = "form-control", placeholder = "Stok", required = "required" })
    </div>

    <div class="form-group my-2 mx-lg-5">
        <button class="btn btn-success" type="submit">Ekle</button>
        <a href="/" class="btn btn-info">Ana Sayfa</a>
    </div>
</form>